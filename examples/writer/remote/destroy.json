/**
 * Psuedo server-side "destroy" handler in PHP.
 * The key to fullfilling a successfull "destroy" request is to return a response having the property
 * "successProperty" as defined in your JsonReader config.
 *
<?php
    $action = $_REQUEST["xaction"]
    $data = $_REQUEST["data"]

    $response = array(
        "success" => false
    );

    // Are we destroying many records?
    if (is_array($data) {
        foreach ($data as $id) {
            destroy($id);
        }
    }
    else {
        destroy($data);
    }
    $response["success"] = true;    // <-- successProperty as defined in your JsonReader config.

    return json_encode($response);

